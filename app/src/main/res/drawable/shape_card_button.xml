<?xml version="1.0" encoding="utf-8"?>

<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>
        <shape
            android:shape="rectangle"
            >
            <solid
                android:color="@color/Card_BorderColor"
                />
            <stroke
                android:width="1dp"
                android:color="@color/Card_BorderColor"
                />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp"
        >
        <shape
            android:shape="rectangle"
            >
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                />
            <solid
                android:color="@color/Card_BackColor"
                />
            <stroke
                android:width="1dp"
                android:color="@color/Card_BackColor"
                />
        </shape>
    </item>
</layer-list>