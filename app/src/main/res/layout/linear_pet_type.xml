<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/App_Padding_S"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:foreground="@drawable/ripple_selectable"
        >
        <ImageView
            android:id="@+id/ivPetIconPTL"
            android:layout_width="@dimen/Pet_Spinner_Image_Width"
            android:layout_height="@dimen/Pet_Spinner_Image_Height"
            android:layout_marginEnd="@dimen/App_MarginHor_S"
            android:contentDescription="@string/CD_Icon"
            android:src="@drawable/ic_pet_cat_128"
            android:background="@drawable/shape_card"
            />
        <TextView
            android:id="@+id/tvPetLabelPTL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/Pet_Type_Cat"
            android:textSize="@dimen/App_TextSize_M"
            android:textColor="@color/Card_TextColor"
            android:background="@drawable/shape_card"
            />
    </LinearLayout>
</LinearLayout>